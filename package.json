{
  "name": "refisma",
  "version": "0.0.6",
  "description": "Refisma is a CLI to create full-stack resources with Next JS, Prisma and Refine",
  "main": "build/index.js",
  "source": "src/index.ts",
  "scripts": {
    "dev": "tsc -w",
    "up": "npm version patch -f",
    "pub": "pnpm up && npm publish",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint ./src/ --ext .ts",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "cm": "cz"
  },
  "bin": {
    "refisma": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasitcolakel/refisma.git"
  },
  "bugs": {
    "url": "https://github.com/rasitcolakel/refisma/issues"
  },
  "keywords": [
    "next",
    "prisma",
    "refine",
    "cli"
  ],
  "author": "rasitcolakel",
  "license": "ISC",
  "devDependencies": {
    "@refinedev/cli": "^2.1.2",
    "@refinedev/core": "^4.5.8",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.7.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "add": "^2.0.6",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.6",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "enquirer": "^2.3.6",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^29.3.1",
    "prettier": "^2.3.2",
    "semantic-release": "^20.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=12.10"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  }
}